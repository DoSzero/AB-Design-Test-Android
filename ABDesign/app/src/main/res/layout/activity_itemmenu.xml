<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_mainscreen">
    <data>
        <variable
            name="isData"
            type="com.dos.ua.model.DesignData" />


    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.ItemMenuActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#8BC34A"
                    android:focusable="true"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="@+id/wallpaper_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.044"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:rippleColor="@color/black"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgA"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_margin="20dp"
                        android:layout_marginBottom="15dp"
                        android:imageUrl="@{isData.imgA}"
                        android:scaleType="fitXY" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/nameA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#C6DAEA"
                        android:elevation="15dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@{isData.nameA}"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold|normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/infoA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:gravity="start"
                        android:text="@{isData.infoA}"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/tv_ask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center|start|center_horizontal"
                        android:text="Did you like this design project?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold|normal" />

                    <Button
                        android:id="@+id/btn_A"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center|center_horizontal"
                        android:background="@drawable/btn_gradient_yes"
                        android:text="A"
                        app:backgroundTint="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgB"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_margin="20dp"
                        android:layout_marginBottom="15dp"
                        android:imageUrl="@{isData.imgB}"
                        android:scaleType="fitXY" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/nameB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#C6DAEA"
                        android:elevation="15dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@{isData.nameB}"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold|normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/infoB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:gravity="start"
                        android:text="@{isData.infoB}"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/tv_ask2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center|start|center_horizontal"
                        android:text="Did you like this this design project?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold|normal" />

                    <Button
                        android:id="@+id/btn_B"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:background="@drawable/btn_gradient_no"
                        android:gravity="center|center_horizontal"
                        android:text="B"
                        app:backgroundTint="@null" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>